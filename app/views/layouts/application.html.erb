<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1, shrink-to-fit=no">
    <title>Onsen</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'  %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>
  <header>
          <div class="nav-bar">

            <% if user_signed_in? %>
                  <%= link_to browse_path do %>
                    <div class="home-image"></div>
                  <% end %>

                  <%= link_to info_blogs_path do %>
                    <div class="info-image"></div>
                  <% end %>

                  <%= link_to user_path(current_user) do %>
                    <div class="profile-image"></div>
                  <% end %>

                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <div class="logout-image"></div>
                  <% end %>

            <% end %>
          </div>

    <%= link_to browse_path do %>
        <%= image_tag 'img/yunokokoti.png',class:"photo" %>
    <% end %>

  </header>
  <div class="main-contents">

      <div id="slidemenu">
        <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">

        </ul>
      </div>

      <%= yield %>
