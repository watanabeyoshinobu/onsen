
<%= render 'menu' %>

<div clas="d-flex align-items-center">
	<h1>感想一覧</h1>
  <div class="ml-auto blogs_button">
    <%= button_to '感想へ戻る', new_blog_path, class: "btn btn-outline-info", method: :get %>
  </div>
</div>

  <table class="table table-bordered border-primary table-hover table-sm blogs_table">
  <thead class="thead-dark">
    <tr>
      <th scope="col" style="width: 40px">No.</th>
      <th scope="col" style="width: 700px">感想タイトル</th>
      <th scope="col">名前</th>
      <th scope="col">投稿日</th>
      <th scope="col">更新日時</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <% @blogs.each do |blog| %>
        <tr>
            <th><%= blog.id %></th>
            <td><%= blog.title %></td>
            <td><%= blog.user.name %></td>
            <td><%= blog.created_at.to_s(:datetime_base) %></td>
            <td><%= blog.updated_at.to_s(:datetime_base) %></td>
            <td><%= button_to 'コメント', blog, id: "detail-" + blog.id.to_s, class: 'btn btn-outline-info', method: :get %></td>
            <td><%= button_to "削除" , blog, class: 'btn btn-outline-info', method: :delete, data: {confirm: "投稿記事を削除しますか？", cancel: "キャンセル", commit: "削除する", title: "削除の確認"} %></td>
        </tr>
      <% end %>
  </tbody>

</table>

<%= paginate @blogs  %>