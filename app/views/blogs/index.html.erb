<div clas="d-flex align-items-center">
	<h1>感想一覧</h1>

</div>

  <table class="table table-bordered border-primary table-hover table-sm posts_table">
  <thead class="thead-dark">
    <tr>
      <th scope="col" style="width: 40px">No.</th>
      <th scope="col" style="width: 700px">感想タイトル</th>
      <th scope="col">名前</th>
      <th scope="col">投稿日</th>
    </tr>
  </thead>

  <tbody>
      <% @blogs.each do |blog| %>
        <tr>
            <th><%= blog.id %></th>
            <td><%= blog.title %></td>
            <td><%= blog.body %></td>
            <td><%= blog.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        </tr>
      <% end %>
  </tbody>

</table>

<%= paginate @blogs  %>