<% if flash[:error_massages] %>
    <div class="alert alert-danger">
        <ul>
            <% flash[:error_massages].each do |massage| %>
                <li><<%= massage %></li>
            <% end %>
        </ul>
    </div>
<% end %>

    <%= render 'shared/error_messages' %>

    <%= form_for @blog do |f| %>

        <div class="box-inner3">
            <%= f.label :title, 'タイトル' %>
            <%= f.text_field :title, class: 'form-control' %>
            <small id="title-tip" class="form-text text-muted">
                タイトルを入力してください♪
            </small>
        </div>
        <div class="box-inner3">
            <%= f.label :body, '投稿内容' %>
            <%= f.text_area :body, class: 'form-control', rows:10 %>
            <small id=content-tip" class="form-text text-muted">
                投稿内容を入力してください♪
            </small>
        </div>

        <div class="box-inner3">
            <%= f.submit '投稿!', class: 'btn btn-info btn-block' %>
            <small id="submit-tip" class="form-text text-muted">
                投稿する前に投稿内容を見直してください
            </small>
        </div>

    <% end %>
