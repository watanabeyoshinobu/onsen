<div class="box2">
  <div class="box-inner2">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2>　　　　新規登録</h2>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="name-box2">
      <%= f.label :name, "ユーザー名" %>
      <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "最大10文字", maxlength: 10 %>
    </div>

    <div class="email-box2">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "xxx@email.com" %>
    </div>

    <div class="password-box2">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "半角英数7文字以上" %>
    </div>

    <div class="repassword-box2">
      <%= f.label :password_confirmation, "パスワード再確認" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "再度誤入力ください" %>
    </div>

    <div class="box-signup">
      <%= f.submit "新規登録" %>
    </div>
<% end %>

  </div>
</div>
<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

