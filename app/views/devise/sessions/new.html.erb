<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2>ログイン</h2>
      <div class="box-email">
        <%= f. label :email,"Eメール" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="column-right">
            <%= link_to "パスワードを忘れた方はこちらから", new_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="box-login">
        <%= f.submit "ログイン" %>
          <div class="legal-text">
            <%= link_to "利用規約", "#" %>
            及び
            <%= link_to "プライバシー規約", "#" %>
            に同意するものとみなされます。
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="remember">
              <%= f.check_box :remember_me %>
              <%= f.label :remember, "ログインにしたままにする" %>
            </div>
          <% end %>
      </div>
    <% end %>

      <div class="boxbox_newusr">
        <p><span>-----</span> 湯のここちの新しいお客様ですか？ <span>------</span></p>
        <%= link_to "湯のここち アカウントの作成", new_user_registration_path %>
      </div>

  </div>
</div>
<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>